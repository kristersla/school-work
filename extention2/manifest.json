{
  "manifest_version": 3,
  "name": "SentiVibe",
  "version": "1.0",
  "description": "Efficiently analyze YouTube comments for sentiments (positive, neutral, negative) to uncover diverse opinions.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
